/* pages/home/home.wxss */
page {
  background-color: #fff;
}

.header {
  width: 100%;
  height: 370rpx;
  background-color: #fff;
  position: relative;
}

.search-box {
  position: absolute;
  z-index: 3;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: 25rpx auto;
  width: 73%;
  height: 50rpx;
  padding: 5rpx 20rpx;
  border-radius: 40rpx;
  background-color: #fff;
  opacity: 0.6;
  border: 1px solid #A9A9A9;
}

.search-box-img {
  width: 47rpx;
  height: 47rpx;
}

.swiper-box {
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 100%;
  background-color: #84F0F3;
}

.swiper-box swiper {
  height: 100%;
}

.swiper-box image {
  width: 100%;
}

.contont {
  width: 100%;
}

.sort-box {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  background-color: #F8F8F8;
}

.sort-box view {
  margin: auto 0;
  width: 33%;
  text-align: center;
  color: #777777;
  font-weight: bold;
  font-size: 33rpx;
}

.sort-box .sort-box-text {
  border-bottom: 5rpx solid #ACD697;
  padding-bottom: 28rpx;
}

.sort-box .elect {
  color: #ACD697;
}

.footer {
  background-color: #f0f0f0;
  text-align: center;
  font-size: 30rpx;
}