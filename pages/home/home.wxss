/* pages/home/home.wxss */
page {
  background-color: #fff;
}

.header {
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  position: relative;
}

.search-box {
  position: absolute;
  z-index: 3;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: 25rpx auto;
  width: 80%;
  height: 15%;
  padding: 5rpx 15rpx;
  border-radius: 40rpx;
  background-color: #fff;
  opacity: 0.6;
  border: 1px solid #A9A9A9;
}

.search-box-img {
  width: 50rpx;
  height: 50rpx;
}

.swiper-box {
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 100%;
  background-color: #84F0F3;
}

.swiper-box swiper {
  height: 100%;
}

.swiper-box image {
  width: 100%;
}

.contont {
  width: 100%;
}

.sort-box {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
}

.sort-box view {
  margin: auto 0;
  width: 33%;
  text-align: center;
  color: lightslategrey;
  font-size: 33rpx;
}

.sort-box .elect {
  font-weight: bold;
  color: #1195db;
}